<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.ajcegosafe.StudentOutpass">

    <LinearLayout
        android:id="@+id/Linear_layout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="107dp"
        android:clickable="true">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="40dp"
            android:layout_y="90dp"
            android:ems="10"
            android:hint="Date of Leaving"
            android:inputType="date" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="275dp"
            android:layout_y="79dp"
            app:srcCompat="@drawable/cul" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Linear_layout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="197dp"
        android:clickable="true">

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="44dp"
            android:layout_y="193dp"
            android:ems="10"
            android:hint="Date of Return"
            android:inputType="date" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_x="277dp"
            android:layout_y="179dp"
            app:srcCompat="@drawable/cul" />

    </LinearLayout>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_x="41dp"
        android:layout_y="295dp"
        android:ems="10"
        android:hint="Purpose"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="224dp"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="416dp"
        android:background="@android:color/holo_green_dark"
        android:text="Submit"
        android:textSize="20sp" />

</AbsoluteLayout>
